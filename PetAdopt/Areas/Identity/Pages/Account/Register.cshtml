@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    var roles = (List<IdentityRole<int>>)ViewData["roles"];
    <link href="~/css/styles/Account/RegisterStyling.css" rel="stylesheet" />
}

<h1>@ViewData["Title"]</h1>


<form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
    <h4>Create a new account</h4>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <input asp-for="Input.Email" placeholder="Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Input.UserName" placeholder="Username" class="form-control">
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Input.Password" placeholder="Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.ConfirmPassword" placeholder="Confirm Password" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Input.FirstName" placeholder="First Name" class="form-control">
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Number" placeholder="Phone Number" class="form-control">
                <span asp-validation-for="Input.Number" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <input asp-for="Input.LastName" placeholder="Last Name" class="form-control">
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Input.City" placeholder="City" class="form-control">
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Input.State" placeholder="State" class="form-control">
                <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>

            <div class="form-group">
                <select asp-for="Input.RoleName" class="form-control" asp-items='new SelectList(roles,"Id","Name")'></select>
                <span asp-validation-for="Input.RoleName" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <h5>User's Image</h5>
                <input asp-for="Input.Image" type="file" name="Image" id="imageInput">
            </div>
        </div>
    </div>
    <button type="submit" value="Upload" class="btn btn-primary">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
