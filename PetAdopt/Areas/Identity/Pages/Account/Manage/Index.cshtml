                        <div class="row">
                            <div class="col-md-6">
                                <div class="pet-details">
                                    <p>Name: <span>@dog.Name</span></p>
                                </div>
                                <div class="pet-details">
                                    <p>Age: <span>@dog.Age</span></p>
                                </div>
                                <div class="pet-details">
                                    <p>Gender: <span>@dog.Gender</span></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="pet-details">
                                    <p>Type: <span>@dog.Type</span></p>
                                </div>
                                <div class="pet-details">
                                    <p>Size: <span>@dog.Size</span></p>
                                </div>
                                <div class="pet-details">
                                    <p>Color: <span>@dog.Color</span></p>
                                </div>
                            </div>
                            <a asp-controller="Dogs" asp-action="Details" asp-route-id="@dog.DogId" class="btn btn-default">
                                More Details
                            </a>
