                        <div class="row">
                            <div class="col-md-6">
                                <div class="pet-details">
                                    <p>Name: <span>@cat.Name</span></p>
                                </div>
                                <div class="pet-details">
                                    <p>Age: <span>@cat.Age</span></p>
                                </div>
                                <div class="pet-details">
                                    <p>Gender: <span>@cat.Gender</span></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="pet-details">
                                    <p>Type: <span>@cat.Type</span></p>
                                </div>
                                <div class="pet-details">
                                    <p>Size: <span>@cat.Size</span></p>
                                </div>
                                <div class="pet-details">
                                    <p>Color: <span>@cat.Color</span></p>
                                </div>
                            </div>
                            <a asp-controller="Cats" asp-action="Details" asp-route-id="@cat.CatId" class="btn btn-default">
                                More Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}