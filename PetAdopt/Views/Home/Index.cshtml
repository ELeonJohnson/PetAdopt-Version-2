    <h1 id="featured-cat-h1">Featured Cats For Adoption</h1>
    <div class="row" id="featured-cats">
        @foreach (var cat in Model.displayCats)
        {
            <div class="card mb-3 col-md-6">
                <a asp-controller="Cats" asp-action="Details" asp-route-id="@cat.CatId">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img class="card-img" src="data:image/jpeg;base64,@Convert.ToBase64String(cat.Image)" alt="Reptile Images" />
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@cat.Name</h5>
