@model PetAdopt.Models.Cat
@{
    ViewData["Title"] = "Create";
    <link href="~/css/styles/Cat/CreateStyling.css" rel="stylesheet" />
}

<h1>Add A Cat To Rehome</h1>
<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <input asp-for="Name" placeholder="Cat's Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Age" placeholder="Cat's Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <textarea asp-for="FoodReq" placeholder="Special Food Requirements" class="form-control" rows="4"></textarea>
                <span asp-validation-for="FoodReq" class="text-danger"></span>
            </div>
            <div class="form-group">
                <textarea asp-for="HabitatReq" placeholder="Special Habitat Requirements" class="form-control" rows="4"></textarea>
                <span asp-validation-for="HabitatReq" class="text-danger"></span>
            </div>
        </div>


        <div class="col-md-6">
            <div class="form-group">
                <input asp-for="Gender" placeholder="Cat's Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Type" placeholder="Cat's Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Size" placeholder="Cat's Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Color" placeholder="Cat's Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
        </div>
    </div>

    <h2>Tell Us About Your Cat</h2>
    <p id="p-apply-check">Please Check All That Applies To Your Cat.</p>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group form-check">
                <h5>Did Your Cat Have A Recent Checkup?</h5>
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RecentCheckup" /> @Html.DisplayNameFor(model => model.RecentCheckup)
                </label>
            </div>
            <div class="form-group form-check">
                <h5>Is Your Cat Trained?</h5>
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Trained" /> @Html.DisplayNameFor(model => model.Trained)
                </label>
            </div>
            <div class="form-group form-check">
                <h5>Is Your Cat Neutered?</h5>
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Neutered" /> @Html.DisplayNameFor(model => model.Neutered)
                </label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group form-check">
                <h5>Is Your Cat Declawed?</h5>
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Declawed" /> @Html.DisplayNameFor(model => model.Declawed)
                </label>
            </div>
            <div class="form-group form-check">
                <h5>Is Your Cat Good With Kids?</h5>
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GoodWithKids" /> @Html.DisplayNameFor(model => model.GoodWithKids)
                </label>
            </div>
            <div class="form-group form-check">
                <h5>Is Your Cat Good With Dogs?</h5>
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GoodWithDogs" /> @Html.DisplayNameFor(model => model.GoodWithDogs)
                </label>
            </div>
            <div class="form-group form-check">
                <h5>Is Your Cat Good With Other Cats?</h5>
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GoodWithCats" /> @Html.DisplayNameFor(model => model.GoodWithCats)
                </label>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="form-group form-check">
                <h5>Cat's Image</h5>
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" type="file" name="Image" id="Image">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn" />
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>


</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
